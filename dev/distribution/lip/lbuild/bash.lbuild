[PrepareBuild]

tar xzvf bash-3.1.tar.gz
cd bash-3.1

# patches

if [ "${BUILD_BUILD_ENV}" ]; then
        set +h
        umask 022

        export PATH=/tools/bin:$PATH
        export LC_ALL=POSIX

	./configure --prefix=/tools \
		--without-bash-malloc
fi



[Build]

cd bash-3.1

if [ "${BUILD_BUILD_ENV}" ]; then
        set +h
        umask 022

        export PATH=/tools/bin:$PATH
        export LC_ALL=POSIX
fi

make

[Install]

cd bash-3.1

if [ "${BUILD_BUILD_ENV}" ]; then
        set +h
        umask 022

        export PATH=/tools/bin:$PATH
        export LC_ALL=POSIX
	
fi

make install

[PostInstall]

cd bash-3.1

if [ "${BUILD_BUILD_ENV}" ]; then
        set +h
        umask 022

        export PATH=/tools/bin:$PATH
        export LC_ALL=POSIX
	
	ln -vs bash /tools/bin/sh
fi

