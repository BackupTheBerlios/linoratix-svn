[DownloadServer]
Main = http://ftp.debian.org/debian/pool/main/f/fakeroot/
Mirrors = 1
Mirror[0] = http://download.linoratix.com/distfiles/

[SourceFiles]
SourceFiles = 1
SourceFile[0] = fakeroot_1.4.2.tar.gz

[PrepareBuild]

tar xvzf fakeroot_1.4.2.tar.gz
cd fakeroot-1.4.2

if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX
	
	./configure --prefix=/tools \
	    --libexecdir=/tools/lib --with-local-prefix=/tools \
	    --disable-nls --enable-shared
fi


[Build]

cd fakeroot-1.4.2

if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX
	
	make -j${PARALLEL_BUILDS}
fi


[Install]

cd fakeroot-1.4.2

if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX

	make install
fi
