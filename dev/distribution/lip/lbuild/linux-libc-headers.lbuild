[PrepareBuild]

if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX
	
	tar xvjf linux-libc-headers-2.6.11.2.tar.bz2

	cd linux-libc-headers-2.6.11.2
	cp -R include/asm-i386 /tools/include/asm
	cp -R include/linux /tools/include	
	cd ..
fi
