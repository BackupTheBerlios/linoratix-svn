[PrepareBuild]
tar xvzf tcl8.4.11-src.tar.gz

cd tcl8.4.11/unix

if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX
	
	./configure --prefix=/tools
fi

[Build]

if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX
fi

cd tcl8.4.11/unix
make


[Install]

cd tcl8.4.11/unix
if [ "${BUILD_BUILD_ENV}" ]; then
	set +h
	umask 022
	
	export PATH=/tools/bin:$PATH
	export LC_ALL=POSIX
fi

make install

[PostInstall]
cd tcl8.4.11/unix
if [ "${BUILD_BUILD_ENV}" ]; then
        set +h
        umask 022

        export PATH=/tools/bin:$PATH
        export LC_ALL=POSIX

	ln -s tclsh8.4 /tools/bin/tclsh
fi

