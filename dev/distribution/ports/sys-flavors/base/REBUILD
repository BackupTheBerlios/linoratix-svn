%build-required: ("bash >=3.0", "libglibc >=2.3.4-r1", "mktemp >=1.5", "gcc3 >=3.4.3", "m4 >=1.4","bison >=1.875","groff >=1.19","flex >=2.5.31","automake >=1.8.3", "patch >=2.5.4")
