
# /etc/profile:

umask 022

export PATH="/bin:/sbin:/usr/bin:/usr/sbin:/usr/X11R6/bin:/usr/local/bin:/usr/local/sbin"


if [ `/bin/whoami` = 'root' ]
then
	export PS1='_dev_ \033[05;31m\u\[\033[00m\]@\[\033[01;31m\]\h \[\033[01;32m\]\w # \[\033[00m\]'
else
	export PS1="_dev_ \[\033[0;36m\]\t\[\033[0;35m\]^\[\033[0;32m\]\u\[\033[0;34m\]@\[\033[0;32m\]\h\[\033[0;35m\]:\[\033[0;33m\]\w\[\033[0m\]\[\033[0;34m\]#\[\033[0m\] "

fi

export INPUTRC=/etc/inputrc


if [ -f "/etc/conf.d/env.conf" ]
then
	source /etc/conf.d/env.conf
fi

export EDITOR="/usr/bin/nano -w"

export PORTS_PATH=/usr/ports
export DISTFILE_PATH=$PORTS_PATH/distfiles
#export INPUTRC=/etc/inputrc

